<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroung"
    android:orientation="vertical"
    tools:context=".CadastrarCartoesActivity">

    <!--Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FF6124"
        android:layout_height="220dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Example Card-->
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#F2FFBD9C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <!--Front of card-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frentedocartao"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--Img Chip-->
                    <ImageView
                        android:id="@+id/imgchipcardnewcard"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/chipcard"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <!--Text Flag-->
                    <TextView
                        android:id="@+id/txtexbandeira"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bandeira"
                        android:textColor="#000"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--Text Number-->
                    <TextView
                        android:id="@+id/txtexnumerocard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/numerocardzero"
                        android:textColor="#000"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgchipcardnewcard" />

                    <!--Text Name Owner-->
                    <TextView
                        android:id="@+id/txtexnomeproprietario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fulanodetal"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtexnumerocard" />

                    <!--Text Validade-->
                    <TextView
                        android:id="@+id/txtexvalidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/validadefake"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Back of card-->
                <RelativeLayout
                    android:id="@+id/costasdocartao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--Barra Preta-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/baracartao"
                        android:layout_alignParentTop="true"/>

                    <!--Bara  BAse CCC-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:background="#fff"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true">

                        <!--Text 000-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/treszero"
                            android:layout_marginEnd="20dp"
                            android:textColor="#878787"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="158dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/circuloccc"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!--Body-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Primeiros Dados-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/primeirodadoscartao"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

            <!--Text Numero Cartao-->
            <TextView
                android:id="@+id/txtbasenumerocard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numerodocartao"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Edit Number Card-->
            <EditText
                android:id="@+id/editnumerocartao"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/edittextserparceiro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtbasenumerocard"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <!--Text Proprietario Cartao-->
            <TextView
                android:id="@+id/txtbasenomecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/nomeempresonocartao"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editnumerocartao" />

            <!--Edit Proprietario Card-->
            <EditText
                android:id="@+id/editnomeproprietariocartao"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/edittextserparceiro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtbasenomecard"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <!--Text Validade Cartao-->
            <TextView
                android:id="@+id/txtbasevalidadecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/validade"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editnomeproprietariocartao" />

            <!--Edit Validade Card-->
            <EditText
                android:id="@+id/editvalidadecartao"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/edittextserparceiro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtbasevalidadecard"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <!--Btn Proximo-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnproximoparaccc"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/btntransparente"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editvalidadecartao" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proximo"
                    android:textSize="22sp"
                    android:textColor="#000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Primeiros Dados-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/segundodadoscartao"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Text Numero Cartao-->
            <TextView
                android:id="@+id/txtbaseccccard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ccc"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Edit Number Card-->
            <EditText
                android:id="@+id/editccccartao"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/edittextserparceiro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtbaseccccard"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <!--Btn Finalizar-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnfinalizar"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btntransparente"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editccccartao">

                <!--Cadastrar-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cadastar"
                    android:textColor="#000"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Btn Voltar-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnvoltaraoprimeirodados"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/btntransparente"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editccccartao">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/voltar"
                    android:textColor="#000"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>