<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroung"
    android:orientation="vertical"
    tools:context=".Ver_e_Deletar_CartaoActivity">

    <!--Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FF6124"
        android:layout_height="220dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Example Card-->
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#F2FFBD9C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <!--Front of card-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frentedocartao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <!--Text Flag-->
                    <TextView
                        android:id="@+id/txtbandeiracardex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bandeira"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginTop="16sp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--Text Number-->
                    <TextView
                        android:id="@+id/txtexnumerocardex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/numerocardzero"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtbandeiracardex" />

                    <!--Text Name Owner-->
                    <TextView
                        android:id="@+id/txtexnomeproprietarioex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/fulanodetal"
                        android:textColor="#000"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtexnumerocardex" />

                    <!--Text Validade-->
                    <TextView
                        android:id="@+id/txtexvalidadeex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="32dp"
                        android:text="@string/validadefake"
                        android:textColor="#000"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <!--Btn Deletar Cartao-->
        <androidx.cardview.widget.CardView
            android:id="@+id/deletarcartao"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardBackgroundColor="#FFB888"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="15dp">

            <!--Base-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Txt Delete Card-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deletarcartao"
                    android:textColor="#000"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</LinearLayout>