<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <!--Body-->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Animation-->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationstar"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/happystar"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Text Bem Vindo ao Time-->
            <TextView
                android:id="@+id/txttittlewellcometheteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bemvindoaotimecfc"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/animationstar" />

            <!--Text Aproveite Seus Beneficies-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aproveiteseusbeneficios"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txttittlewellcometheteam" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>