<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:background="@drawable/cartaonormal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <!--Text Flag-->
        <TextView
            android:id="@+id/txtbandeiracardlista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bandeira"
            android:textColor="#fff"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Text Number Card-->
        <TextView
            android:id="@+id/numerocartaocliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/numerocardzero"
            android:textColor="#fff"
            android:textSize="19sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!--Text Nome do Proprietario-->
        <TextView
            android:id="@+id/nomeproprietariocartaocliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proprietario"
            android:textColor="#fff"
            android:textSize="17sp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>